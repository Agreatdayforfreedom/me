---
import Header from '../components/Header.astro'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header></Header>
		<slot />
		<canvas></canvas>
		<script src="../scripts/loop.ts">
			
		</script>
	</body>
</html>
<style is:global>
	body {
		margin: 0;
		padding: 0;
		color: #efefef;
		overflow: overlay;
	}

	canvas {
		z-index: 0;
		position: fixed;
		top: 0;
		left: 0;
	}
	
</style>
